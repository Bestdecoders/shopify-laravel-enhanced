{
    "name": "bestdecoders/shopify-laravel-enhanced",
    "description": "Enhancements for Shopify-Laravel integration, adding user and API interactivity.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Apurba Podder",
            "email": "seopage1it@gmail.com"
        }
    ],
    "require": {
        "kyon147/laravel-shopify": ">=21.0"
    },

    "require-dev": {
    "phpunit/phpunit": "^9.0",
    "orchestra/testbench": "^7.0" 
    },

    "autoload": {
        "psr-4": {
            "Bestdecoders\\ShopifyLaravelEnhanced\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Bestdecoders\\ShopifyLaravelEnhanced\\ShopifyEnhancedServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}

